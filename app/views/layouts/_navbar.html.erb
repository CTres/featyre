        <a class="brand" href="/">Featyre </a>
        <form class="navbar-search">
          <input type="text" class="search-query" placeholder="Search..."> 
        </form>
        <ul class="nav">
          <li>
          <a href="#">Explore</a> 
          </li>
          <li>
          <a href="#">About</a> 
          </li>
        </ul>
        <ul class="nav" id="user-links">
          <%= link_to "Sign Up", new_user_registration_path %> |
