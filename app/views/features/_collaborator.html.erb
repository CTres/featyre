
<div class="collaborator-tag" id="<%= "#{user.id}" %>">
	<% if show == false %>
	<div id="collaborator-role">
		<%= simple_form_for(user, url: update_feature_user_path(user_id: user.id), method: :post, remote: true, :defaults => { :input_html => { :class => "role" } }) do |f| %>
			<%= f.input_field :role, placeholder: 'role', label: false %>
		<% end %>
	</div>
	<div id="collaborator-name">
		<%= image_tag user.avatar_url, size: "30x30"%>
		<%= link_to user.name, user %>
		<% if user_counter > 0 && user_owner%>
			<%= link_to glyph(:remove),remove_collaborator_path(:temp_collaborator => user.username), class: 'remove_icon' %> 
		<% end %>
	</div>
	<% else %>
	<div id="collaborator-role">
	<%= user.role %>
	</div>
	<div id="collaborator-name">
		<%= image_tag user.avatar_url, size: "30x30"%>
		<%= link_to user.name, user %>
	</div>
	<% end %>
</div>

