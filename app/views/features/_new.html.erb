<div class="new-feature-partial">
  <div class="status"></div>
      <%= image_tag "camera.png", class: 'add_photo', size: '50x50'%>
      <%= simple_form_for(@feature, html: {multipart: true, class: 'photo_form'}) do |f| %>
        <%= f.simple_fields_for :title_photo do |p| %>
          <%= p.file_field :image, class: 'photo', as: :hidden%>
          <%= p.hidden_field :primary, value: 'true' %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row" id="feature-row">
    <div class="span8 offset2">
      <div class="feature-inner">
        <%= simple_form_for(@feature) do |f| %>
          <%= f.input :title, input_html: {class: "span8"}, placeholder: "add your title", label: false, as: :text, autofocus: true%>
          <%= f.simple_fields_for :images do |i| %>
          <%= i.file_field :image %>
          <% end %>
          <%= f.input :tag_list, input_html: {class: "span8"}, placeholder: "tags, i.e python, machine learning", label: false, as: :text%>
          <%= f.input :text, as: :hidden%>
        <% end %>
        <div class="feature_body editable" id="editor" data-placeholder="Your Note">
        </div>
      </div>
    </div>
  </div>
</div>
