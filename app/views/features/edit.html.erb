<div class="container">
<%= button_to "Publish", feature_path(@feature), class: "editbar btn btn-success", method: "get" %>
      <div class="status"></div>
  <div class="row" id="feature-row">
    <div class="span8 offset1">
      <div class="feature-inner">
        <%= simple_form_for(@feature, html: {multipart: true, class: 'feature_edit'}, remote: true) do |f| %>
          <%= f.input :title, input_html: {class: "span8"}, placeholder: "add your title", label: false, as: :text%>
          <%= f.simple_fields_for :values, defaults: { input_html: { id: 'value' } }  do |d| %>
          <%= d.input_field :persona, label: false, placeholder: "Persona" %>
          <%= d.input_field :change, collection: [ "increase", "decrease"], default: "increases" %>
          <%= d.input_field :metric, label: false, placeholder: "metric" %>
          <%= d.input_field :quantity, label: false, placeholder: "by amount" %>
          <% end %>
          <%= f.input :tag_list, input_html: {class: "span8"}, placeholder: "tags, i.e python, machine learning", label: false, as: :text%>
          <%= f.input :company, input_html: {class: "span8"}, placeholder: "@Company", label: false, as: :text%>
          <%= f.input :text, as: :hidden%>
        <% end %>
          <div class="feature_body editable" id="editor"> 
            <%= @feature.text.html_safe %>
          </div>
        </div>
      </div> 


    <div class="span2 offset1">
      <div class="collaborators">
      <legend align="center">Team</legend>
      <%= render partial: 'features/collaborator', collection: @collaborators, as: :user, :locals => {:show => (false)} %>
      <hr>
    <% if user_owner %>
    <h4 align="center">Add Member</h4>
    <%= simple_form_for(@feature, :url => add_collaborator_path, :html => { :class => "form-vertical" }) do |f| %>
      <%= f.input_field :temp_collaborator, :label => false, :placeholder => "email or github username", :input_html => { :size => 40}%>
      <%= f.input_field :temp_role, :label => false, :placeholder => "role", :input_html => { :size => 40}%>
      <%= f.button :submit, class: "btn-success", :value => 'Add'%>
    <% end %>
    <% end %>
    </div>
    </div>
  </div>
  </div>

