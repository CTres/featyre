<div class="container">
      <div class="status"></div>
  <div class="row" id="feature-row">
    <div class="span8 offset1">
      <div class="feature-inner">
        <%= simple_form_for(@feature, remote: true) do |f| %>
          <%= f.input :title, input_html: {class: "span8"}, placeholder: "add your title", label: false, as: :text%>
          <%= f.input :subtitle, input_html: {class: "span8"}, placeholder: "subtitle", label: false, as: :text %>
          <%= f.input :tag_list, input_html: {class: "span8"}, placeholder: "tags, i.e python, machine learning", label: false, as: :text%>
          <%= f.input :text, as: :hidden%>
          <div class="feature_body editable" id="editor"> 
          <%= @feature.text.html_safe %>
          </div>
        </div>
      </div>
  

    <% end %>
    <div class="span2 offset1">
      <div class="collaborators">
      <legend align="center">Team</legend>
      <%= render partial: 'users/user', collection: @collaborators, :locals => {:show => (false)} %>
      <hr>
      <br>
    <% if user_owner %>
    <%= simple_form_for(@feature, :url => add_collaborator_path, :html => { :class => "form-vertical" }) do |f| %>
      <%= f.input_field :temp_collaborator, :label => false, :placeholder => "email or github username", :input_html => { :size => 40}%>
      <%= f.input_field :temp_role, :label => false, :placeholder => "role", :input_html => { :size => 40}%>
      <%= f.button :submit, class: "btn-success", :value => 'Add'%>
    <% end %>
    <% end %>
    </div>
    </div>
  </div>
  </div>

