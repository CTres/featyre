<% if @filters %>
  <legend> Filters: 
    <%= @filters.each do |f| %>
      <span class="label label-info" id="nolink"> <%= f%> </span>
    <% end %>
  </legend> 
  <% else %>
  <legend> </legend>
<% end %>

<div class="feature" draggable="true">
  <% if feature.company %>
    @<%=feature.company %>
    <% end %>
  <div id="title" display="inline-block">
	<%=link_to feature.user.username, user_path(feature.user) %> shipped <%= link_to feature.title, feature %>
	</div>
  <div id="details">

    <%= feature.text %> 
  </div>
    <% feature.tag_list.each do |f|%>
    <span class="label label-info" id="nolink"> <%=link_to f, features_path(query: f) %> </span> 
    <% end %>
</div>



