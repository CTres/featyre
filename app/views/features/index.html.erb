
<div id="feature-browser" class="row">
	<div class="span6">
		<h3>Features</h3>
		<div id="feature-list">
			
			<% @features.each do |feature| %>
				<div id="feature" draggable="true">
 					<h4 class="title"> <%= link_to feature.title, feature%> </h4>
					<p>
						description: <%= feature.description %> <br>
						built with: <%= feature.tag_list %> <br>
						<span>
  						by <% feature.collaborators.each do |collaborator| %>
  						<%= collaborator.username %>
  						<% end %>
  					</span>
  				<br>
  			learned: <%= feature.text %>
  				</p>
  </div>
<% end %>
		
		</div>
	</div> 
	
	<div class="span6">
		<div id="unpublished">
			<h3>Add Feature</h3>
			<div id="feature-add">
				<%= render 'form' if user_signed_in?  %>
			</div>
		</div>
	</div>
	
</div>


