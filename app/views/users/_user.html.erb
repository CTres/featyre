<%= link_to(user, :anchor => 'collaborator-tag')  do %>
  <div class="collaborator-tag" id="<%= "#{user.id}" %>">
  	<div id="user_role">
  		<%= user.role %>
  	</div>
  	<div id="collaborator-name">
  		<%= image_tag user.avatar_url, size: "30x30"%>
  		<%= link_to user.name, user %>
  	</div>
  </div>
<% end %>
