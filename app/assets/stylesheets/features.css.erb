/* feature wysiwyg
*/ 

.editbar {
  float: right;
}
/* FEATURES#NEW */
#feature-row {
	margin-top: 20px;
  margin-bottom: 60px;
}

.feature-inner {
  height: auto;
  overflow-y:hidden;
  overflow-x:hidden;
}

#feature_title {
  font-family: "freight-sans-pro",sans-serif;
  font-size: 52px;
  font-weight: bold;
  letter-spacing: -2px;
  height: 52px;
  line-height: 52px;
  margin-bottom: 10px;
  color: rgb(51, 51, 50); 
  border: none;
  resize: none;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
  outline: none;
}

#show_feature_title {
  font-family: "freight-sans-pro",sans-serif;
  font-size: 52px;
  font-weight: bold;
  letter-spacing: -2px;
  height: auto;
  line-height: 52px;
  margin-bottom: 10px;
  color: rgb(51, 51, 50); 
  border: none;
  resize: none;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
  outline: none;
}

#value {
  font-weight: normal;
  font-family: "freight-sans-pro",sans-serif;
  font-size: 18px;
  color: #333332;
}

#feature_subtitle {
  font-family: "freight-sans-pro",sans-serif;
  font-style: italic;
  font-weight: normal;
  font-size: 32px;
  line-height: 32px;
  height: auto;
  margin-top: 15px;
  margin-bottom: 5px;
  resize: none;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
	border: none;
  outline: none;
}
#feature_company {
  font-weight: normal;
  font-family: "freight-sans-pro",sans-serif;
  font-size: 20px;
  line-height: 20px;
  height: 20px;
  margin: 0 0 0 0px;
  resize: none;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
  border: none;
  outline: none;
}

#feature_tag_list {
  font-weight: normal;
  font-family: "freight-sans-pro",sans-serif;
  color: #333332;
  font-size: 20px;
  line-height: 20px;
  height: 20px;
  margin-top: 15px;
  resize: none;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
	border: none;
  outline: none;
}

.feature_body {
  outline: none;
  font-family: "ff-meta-serif-web-pro",serif;
  color:#33332;
  font-size: 21px;
  font-weight: normal;
  line-height: 31px;
  height: auto;
  min-height: 500px;
	border: none;
  margin-top: 40px;
  outline: none;
  margin-bottom: 100px;
}

.feature_body h3 {
  font-size: 30px;
  padding-top: 4px;
  padding-bottom: 4px;
  font-family: "freight-sans-pro",sans-serif;
}

.feature_body h4 {
  font-size: 25px;
  padding-top: 4px;
  padding-bottom: 4px;
  font-family: "freight-sans-pro",sans-serif;
}

.feature_body p {
  font-size: 21px;
  padding-top: 5px;
  padding-bottom: 5px;
}

.status{
  position: fixed;
  height: 15px;
  font-size: 15px;
  font-family: sans-serif;
  color: #C6C6C6;
  font-weight: bold;
}

.new_feature_btn {
  text-align: right;
}

/* MYFEATURE side of the index */

#mytitle {
  font-weight: bold;
  font-size: 18px;
  margin-bottom: 5px;
}

#mydetails {
  color: black;
}

.top-photo{
  display: block;
  margin: auto;
  padding-bottom: 10px;
}

.top-photo-form {
  padding-top: 10px;
  margin: auto;
}

input[type="file"] {
  display: none;
}

.add_photo {
  opacity: .4;
}

.add_photo:hover {
  opacity: .8;
}

.text {
  font-weight: normal;
}

.settings {
  font-size: 30px;
  color: #777777;
}
  .settings:hover {
    color: black;
  }
